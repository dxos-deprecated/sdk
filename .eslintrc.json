{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "semistandard",
    "plugin:react/recommended"
  ],
  "plugins": [
    "eslint-plugin-local-rules",
    "jest"
  ],
  "rules": {
    "local-rules/header": ["error"],
    "react/prop-types": "off",
    "import/order": ["error", {
      "pathGroups": [
        {
          "pattern": "@material-ui/**",
          "group": "external",
          "position": "after"
        },
        {
          "pattern": "@{dxos,wirelineio}/**",
          "group": "internal",
          "position": "before"
        }
      ],
      "pathGroupsExcludedImportTypes": ["@{dxos,wirelineio}/**", "@material-ui/**"],
      "newlines-between": "always",
      "groups": [
        ["builtin", "external"],
        "internal"
      ],
      "alphabetize": {
        "order": "asc"
      }
    }]
  },
  "env": {
    "jest/globals": true,
    "node": true,
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
