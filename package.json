{
  "name": "sdk",
  "version": "1.0.0",
  "private": true,
  "description": "DXOS sdk monorepo.",
  "homepage": "https://github.com/dxos/sdk#readme",
  "bugs": {
    "url": "https://github.com/dxos/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/sdk.git"
  },
  "license": "GPL-3.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "testing/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "test": "lerna run test",
    "posttest": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "semistandard"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "semistandard": "14.2.0"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "node",
      "browser"
    ]
  }
}