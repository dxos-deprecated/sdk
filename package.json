{
  "name": "@dxos/sdk",
  "version": "2.3.0",
  "private": true,
  "description": "DXOS SDK monorepo.",
  "homepage": "https://github.com/dxos/sdk#readme",
  "bugs": {
    "url": "https://github.com/dxos/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/sdk.git"
  },
  "license": "AGPLv3",
  "workspaces": {
    "packages": [
      "packages/*",
      "bot/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint && npm run lint:lockfile",
    "lint:fix": "lerna run lint -- --fix",
    "test": "lerna run test",
    "posttest": "npm run lint",
    "lint:staged": "lint-staged",
    "lint:lockfile": "lockfile-lint --path yarn.lock --allowed-hosts yarn npm codeload.github.com --validate-https",
    "precommit": "npm run lint:staged && npm run lint:lockfile"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged && npm run lint:lockfile"
    }
  },
  "lint-staged": {
    "*.js": "semistandard"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "lockfile-lint": "^4.3.7",
    "semistandard": "14.2.0"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "node",
      "browser"
    ]
  }
}
