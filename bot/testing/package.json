    "pstree.remy": "^1.1.8",
    "semistandard": "14.2.0",
    "ts-jest": "^26.4.4"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "node",
      "browser"
    ],
    "ignore": [
      "dist",
      "out",
      ".bots"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
